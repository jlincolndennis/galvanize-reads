
<section class='author-panel'>
  <img src="{{author.portrait_url}}" alt="" />
<h3>{{author.first_name}} {{author.last_name}}</h3>
<a href="/authors/{{author.id}}/edit"><button type="button" name="button">Edit</button></a>

<a href="/authors/{{author.id}}/delete"><button type="button" name="button">Delete</button></a>
<p>{{author.biography}}</p>
<div class='books'>
  <h4>Books!</h4>
{{#books}}
  <p>{{this}}</p>
{{/books}}
</section>
